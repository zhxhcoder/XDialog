<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/xdialog_shape_wihte_round_corner"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <TextView
        android:id="@+id/xdialog_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="12dp"
        android:text=""
        android:textColor="@color/C0"
        android:textSize="@dimen/xdialog_title_txt_size"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/xdialog_tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="60dp"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="@color/C3"
            android:textSize="@dimen/xdialog_msg_txt_size"/>

        <EditText
            android:id="@+id/et_1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/xdialog_shape_et_bg"
            android:cursorVisible="true"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/C4"
            android:textCursorDrawable="@drawable/xdialog_shape_et_cursor"
            android:textSize="@dimen/xdialog_input_txt_size"/>

        <EditText
            android:id="@+id/et_2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/xdialog_shape_et_bg"
            android:cursorVisible="true"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/C4"
            android:textCursorDrawable="@drawable/xdialog_shape_et_cursor"
            android:textSize="@dimen/xdialog_input_txt_size"/>


    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/C7"/>

    <LinearLayout
        android:id="@+id/ll_container_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/xdialog_selector_left_bottom"
            android:gravity="center"
            android:padding="5dp"
            android:text="1"
            android:textColor="@color/C12"
            android:textSize="@dimen/xdialog_btn_txt_size"/>

        <View
            android:id="@+id/line_btn2"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/C7"/>

        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/xdialog_selector_all_no"
            android:gravity="center"
            android:minHeight="48dp"
            android:padding="5dp"
            android:text="2"
            android:textColor="@color/C12"
            android:textSize="@dimen/xdialog_btn_txt_size"/>

        <View
            android:id="@+id/line_btn3"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/C7"/>

        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/xdialog_selector_right_bottom"
            android:gravity="center"
            android:minHeight="48dp"
            android:padding="5dp"
            android:text="3"
            android:textColor="@color/C12"
            android:textSize="@dimen/xdialog_btn_txt_size"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_container_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_1_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/xdialog_selector_all_no"
            android:gravity="center"
            android:minHeight="48dp"
            android:padding="5dp"

            android:text="1"
            android:textColor="@color/C12"
            android:textSize="@dimen/xdialog_btn_txt_size"/>

        <View
            android:id="@+id/line_btn2_vertical"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/C7"/>

        <Button
            android:id="@+id/btn_2_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/xdialog_selector_all_no"
            android:gravity="center"
            android:minHeight="48dp"

            android:padding="5dp"
            android:text="2"
            android:textColor="@color/C12"
            android:textSize="@dimen/xdialog_btn_txt_size"/>

        <View
            android:id="@+id/line_btn3_vertical"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/C7"/>

        <Button
            android:id="@+id/btn_3_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/xdialog_selector_all_bottom"
            android:gravity="center"
            android:minHeight="48dp"
            android:padding="5dp"

            android:text="3"
            android:textColor="@color/C12"
            android:textSize="@dimen/xdialog_btn_txt_size"/>


    </LinearLayout>


</LinearLayout>